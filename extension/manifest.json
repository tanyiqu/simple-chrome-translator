{
  "manifest_version": 3,
  "name": "Simple Chrome Translator",
  "version": "1.0",
  "default_locale": "zh_CN",

  "description": "简单翻译\nhttps://github.com/tanyiqu/simple-chrome-translator",


  "background": {
    "service_worker": "js/background.js"
  },

  
  "icons": {
    "16": "extension.png",
    "48": "extension.png",
    "128": "extension.png"
  },

  "action": {
    "default_popup": "pages/popup.html",
    "default_icon": "extension.png"
  },

  "permissions": [
    "contextMenus",
    "declarativeNetRequest",
    "tabs",
    "notifications"
  ],

  "host_permissions": ["http://*/*", "https://*/*"]

}